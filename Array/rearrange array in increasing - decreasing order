// rearrange array in increasing - decreasing order 
// divide from mid 
// first mid - increasing 
// last mid - decreasing 

package Array;

import java.util.Scanner;
import java.util.Arrays;

public class P6 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        if (n % 2 != 0) {
            System.out.println("Please enter an even number.");
            return;
        }

        int arr[] = new int[n];

        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        Arrays.sort(arr);  

        int[] result = new int[n];

       
        for (int i = 0; i < n / 2; i++) {
            result[i] = arr[i];
        }

        
        int index = n / 2;
        for (int i = n - 1; i >= n / 2; i--) {
            result[index++] = arr[i];
        }

        // Output the final rearranged array
        for (int num : result) {
            System.out.print(num + " ");
        }
    }
}
